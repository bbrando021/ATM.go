<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.patel.fast.deposit">
    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:paddingRight="20dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="48dp"
            android:text="Select Deposit Type:"
            android:textColor="#060968"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="44dp" />

        <Button
            android:id="@+id/dBalance"
            android:layout_width="185dp"
            android:layout_height="50dp"
            android:layout_above="@+id/dReward"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="11dp"
            android:onClick="toggleBalance"
            android:text="Balance"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="218dp" />

        <Button
            android:id="@+id/dReward"
            android:layout_width="185dp"
            android:layout_height="50dp"
            android:layout_above="@+id/button8"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:onClick="toggleRewards"
            android:text="Rewards"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="280dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="185dp"
            android:layout_height="50dp"
            android:onClick="goBack"
            android:text="Return to Main Menu"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="342dp"
            android:layout_marginBottom="105dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
